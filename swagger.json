swagger: "2.0"
info:
  version: 0.0.0
  title: iService api


host: "qa.iservicecrm.com"

basePath: "/f"

schemes:
- "https"
paths:
  /webapp-api-login?api=login:
    post:
      tags:
      - "Login API"
      summary: "Login to iService"
      description: "Authenticates to an iService tenant and returns details of the authenticated user"
      operationId: "Login"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "emailAddress"
        in: "formData"
        description: "Login name for the iService user. This does NOT need to be an email address."
        required: true
        type: "string"
      - name: "password"
        in: "formData"
        description: "Password for the iService user."
        required: true
        type: "string"
      responses:
        '200':
          description: "successful operation"
        '400':
          description: "Invalid username/password supplied"

  /webapp-api-login?api=logout:
    post:
      tags:
      - "Login API"
      summary: "Logout of iService"
      description: "Closes a user session from iService"
      operationId: "Logout"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      responses:
        '200':
          description: "successful operation"

definitions:
  User:
    type: "object"
    properties:
      name:
        type: "string"
        description: "test"
      job:
        type: "string"
      id:
        type: "integer"
        format: "int32"
      createdAt:
        type: "string"
  
  Login:
    type: "object"
    properties:
      emailAddress:
        type: "string"
        description: "Login name for the iService user.  This does NOT need to be an email address."
      password:
        type: "string"
        description: "Password for the iService user."