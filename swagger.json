swagger: "2.0"
info:
  version: 0.0.0
  title: iService api


host: "qa.iservicecrm.com"

basePath: "/f"

schemes:
- "https"
paths:
  /webapp-api-login?api=login:
    post:
      tags:
      - "Login API"
      summary: "Login to iService"
      description: "Authenticates to an iService tenant and returns details of the authenticated user"
      operationId: "Login"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "emailAddress"
        in: "formData"
        description: "Login name for the iService user. This does NOT need to be an email address."
        required: true
        type: "string"
      - name: "password"
        in: "formData"
        description: "Password for the iService user."
        required: true
        type: "string"
      responses:
        '200':
          description: "successful operation"
        '400':
          description: "Invalid username/password supplied"

  /webapp-api-login?api=logout:
    post:
      tags:
      - "Login API"
      summary: "Logout of iService"
      description: "Closes a user session from iService"
      operationId: "Logout"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      responses:
        '200':
          description: "successful operation"

  /webapp-api-history?api=details&interactionID={{interactionID}}:
    get:
      tags:
      - "History API"
      summary: "Details"
      description: |
        Returns full details of a single interaction, including:
          * General content such as subject, body, attachments, etc
          * Property and Case values
          * Status audit log
          * Associated contacts/agents
      operationId: "History Detail"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "interactionID"
        in: "path"
        description: "ID of Interaction to fetch details"
        required: true
        type: "integer"
      responses:
        '200':
          description: "successful operation"

  /webapp-api-history?api=threads&contactID={{contactID}}:
    get:
      tags:
      - "History API"
      summary: "Threads"
      description: |
        Returns History Threads details of a single interaction
      operationId: "History Threads"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "contactID"
        in: "path"
        description: "ID of contact to fetch details"
        required: true
        type: "integer"
      responses:
        '200':
          description: "successful operation"

  /webapp-api-history?api=children&threadID={{threadID}}:
    get:
      tags:
      - "History API"
      summary: "Children"
      description: |
        Returns full details of a single interaction, including:
          * General content such as subject, body, attachments, etc
          * Property and Case values
          * Status audit log
          * Associated contacts/agents
      operationId: "History Children"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "threadID"
        in: "path"
        description: "ID of Interaction to pull details for"
        required: true
        type: "integer"
      responses:
        '200':
          description: "successful operation"

  /webapp-api-history?api=propertyset&interactionID={{interactionID}}:
    get:
      tags:
      - "History API"
      summary: "Propertyset"
      description: |
        Returns full details of a single interaction, including:
          * General content such as subject, body, attachments, etc
          * Property and Case values
          * Status audit log
          * Associated contacts/agents
      operationId: "History Propertyset"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "interactionID"
        in: "path"
        description: "ID of Interaction to fetch details"
        required: true
        type: "integer"
      responses:
        '200':
          description: "successful operation"

  /webapp-api-history?api=startagentemail&interactionID={{interactionID}}:
    get:
      tags:
      - "History API"
      summary: "startagentemail"
      description: |
        Returns full details of a single interaction, including:
          * General content such as subject, body, attachments, etc
          * Property and Case values
          * Status audit log
          * Associated contacts/agents
      operationId: "History Startagentemail"
      consumes:
      - "multipart/form-data"
      produces:
      - "application/json"

      parameters:
      - name: "interactionID"
        in: "path"
        description: "ID of Interaction to fetch details"
        required: true
        type: "integer"
      responses:
        '200':
          description: "successful operation"

definitions:
  User:
    type: "object"
    properties:
      name:
        type: "string"
        description: "test"
      job:
        type: "string"
      id:
        type: "integer"
        format: "int32"
      createdAt:
        type: "string"
  
  Login:
    type: "object"
    properties:
      emailAddress:
        type: "string"
        description: "Login name for the iService user.  This does NOT need to be an email address."
      password:
        type: "string"
        description: "Password for the iService user."