swagger: "2.0"
info:
  version: 0.0.0
  title: iService api
  

host: "qa.iservicecrm.com"

basePath: "/f"

schemes:
- "https"
- "http"
paths:
  /webapp-api-login:
    post: 
      tags: 
      - "Login" 
      summary: "Login to the system" 
      description: "Api to login to iService System. User needs to be logged in to successfully execute all the api" 
      operationId: "WebApilogin" 
      consumes:
      - "application/x-www-form-urlencoded"
      produces: 
      - "application/json" 
      - "application/xml" 
      
      parameters: 
      - name: "api" 
        in: "query" 
        description: "The user name for login" 
        required: true 
        type: "string" 
        default: "login" 
      - name: "emailAddress"
        in: "formData"
        description: "Login name for the iService user.  "
        required: false
        type: "string"
      - name: "password"
        in: "formData"
        description: "Password for the iService user."
        required: false
        type: "string"
      responses:
        200:
          description: "successful operation"
        400:
          description: "Invalid username/password supplied"
  
  

definitions:
  
  User:
    type: "object"
    properties:
      name:
        type: "string"
        description: "test"
      job:
        type: "string"
      id:
        type: "integer"
        format: "int32"
      createdAt:
        type: "string"
  
  Login:
    type: "object"
    properties:
      emailAddress:
        type: "string"
        description: "Login name for the iService user.  This does NOT need to be an email address."
      password:
        type: "string"
        description: "Password for the iService user."

 